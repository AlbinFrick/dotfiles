# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt + shift - h: yabai -m display --focus west
alt + shift - l: yabai -m display --focus east
alt + shift - j: yabai -m display --focus north 
alt + shift - k: yabai -m display --focus south 

# -- Modifying the Layout --

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# resize windows
ctrl + shift + alt - h : yabai -m window --resize left:-20:0
ctrl + shift + alt - j : yabai -m window --resize bottom:0:20
ctrl + shift + alt - k : yabai -m window --resize top:0:-20
ctrl + shift + alt - l : yabai -m window --resize right:20:0

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt + ctrl - h : yabai -m window --display west; yabai -m display --focus west;
shift + alt + ctrl - l : yabai -m window --display east; yabai -m display --focus east;


# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - a : yabai -m window --space 1;
shift + alt - s : yabai -m window --space 2;
shift + alt - d : yabai -m window --space 3;
shift + alt - f : yabai -m window --space 4;
shift + alt - g : yabai -m window --space 5;
shift + alt - z : yabai -m window --space 6;
shift + alt - x : yabai -m window --space 7;

